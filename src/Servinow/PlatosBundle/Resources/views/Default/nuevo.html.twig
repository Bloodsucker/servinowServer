{% extends 'ServinowNavigationBundle:Navigation:index.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/servinowlatos/css/pantallaPlatos.css') }}">

{% endblock %}

{% block content %}

<form method="post" action="{{ path('servinow_platos_homepage_decidir', {'restaurantID': 1 }) }}">
    <div>
       <div>
            <input type="text" name="nombre">
        </div>
        <div>
            <input type="textarea" name="descripcion">
        </div>
        <div>
            <input type="text" name="precio">
        </div>
    </div>
    
    <div>
       <div>
            <input type="file" name="imagen" value="">
        </div>
        <div>
            <input type="checkbox" name="chk_group" checked />Bebidas<br />
            <input type="checkbox" name="chk_group" checked />Bocadillos<br />
            <input type="checkbox" name="chk_group" checked />Platos Combinados<br />
            <input type="checkbox" name="chk_group" checked />Pasta<br />
            <input type="checkbox" name="chk_group" checked />Carne<br />
            <input type="checkbox" name="chk_group" checked />Postre<br />
        </div>
        <div>
            <input type="checkbox" name="disponible" />Disponible<br />
        </div>
    </div>
    
    <button type=submit name="action" value="aceptarNuevo">Aceptar</button>
    <button type=submit name="action" value="descartarNuevo">Descartar</button>
</form>

{% endblock %}


