{% extends 'ServinowNavigationBundle:Navigation:index.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/servinowplatos/css/pantallaPlatos.css') }}">
{% endblock %}

{% block content %}

<form method="post" action="{{ path('servinow_platos_homepage_decidir', {'restaurantID': 1 }) }}">
    <table>
        <tbody>
            <tr>
                <td>Nombre<br/><input type="text" name="nombre" required="required" placeholder="Nombre del plato"/></td>
                <td></td>
                <td>Imagen<br/><input type="file"/></td>
            </tr>
            <tr>
                <td>Descripción<br/><textarea rows="4" cols="20" name="descripcion" required="required" placeholder="Descripción del plato"></textarea></td>
                <td></td>
                <td>Categorías<br/>
                    <div class="categorias">
                        <input type="checkbox" name="chk_group" />Bebidas<br />
                        <input type="checkbox" name="chk_group" />Bocadillos<br />
                        <input type="checkbox" name="chk_group" />Platos Combinados<br />
                        <input type="checkbox" name="chk_group" />Pasta<br />
                        <input type="checkbox" name="chk_group" />Carne<br />
                        <input type="checkbox" name="chk_group" />Postre<br />
                    </div>
                </td>
            </tr>
            <tr>
                <td>Precio<br/><input type="number" name="precio" required="required" placeholder="X.Y"/> €</td>
                <td></td>
                <td><input type="checkbox" name="disponible"/>Disponible<br /></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td style="text-align: right">
                    <button type=submit name="action" value="aceptarNuevo">Aceptar</button>
                    <button type=submit name="action" value="descartarNuevo">Descartar</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>

{% endblock %}


